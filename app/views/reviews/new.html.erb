<%= simple_form_for [@restaurant, @review] do |f| %>
  <div class="form-group">
    <%= f.input :content %>
    <%= f.text_field :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input :rating%>
    <%= f.text_field :rating, class: "form-control" %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
<hr>

